
{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es2017", "dom"],
      "strict": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "noEmit": false,
      "declaration": true,
      "allowJs": true,
      "checkJs": true,
      "emitDeclarationOnly": true,
      "rootDir": "./src",
      "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    
  }